        }
        else {

            document.getElementById("divItemLocations").style.display = 'none';
            document.getElementById("btnItemLocations").value = "+ Item locations";
        }
    }

    function onclickPricing() {

        if (document.getElementById("btnPricing").value == "+ Pricing & Taxes") {

