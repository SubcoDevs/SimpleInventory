    function onclickHistory() {

        if (document.getElementById("btnHistory").value == "+ History") {

            document.getElementById("divHistory").style.display = 'block';
            document.getElementById("btnHistory").value = "- History";

        }
        else {

            document.getElementById("divHistory").style.display = 'none';
            document.getElementById("btnHistory").value = "+ History";
        }
    }
</script>

}
