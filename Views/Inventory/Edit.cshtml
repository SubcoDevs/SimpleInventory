@model InventoryManagement.Models.Product

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit Product</legend>

        @Html.HiddenFor(model => model.Id)

        <div>
            <div >
                <input type="button" class="link_a" id="btnDetails" value="+ Details" onclick="onclickDetails()" />
            </div>
            <div class="toggle1" id="divDetails">
                <div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.SaleableItem)
                    </div>
                    
                    <div class="editor-field">
                        @Html.EditorFor(model => model.SaleableItem)
                        @Html.ValidationMessageFor(model => model.SaleableItem)
                    </div>
                </div>
                <div>
                    <div style="float:left;">
                        <div class="editor-label" style="">
                            @Html.LabelFor(model => model.Name, new { @class = "required" })
                                  
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)&nbsp;&nbsp;&nbsp;
                        </div>
                    </div>
                    <div style="">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Description)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>
                </div>
                <div>
                    <div style="float:left;">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Number, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Number)
                            @Html.ValidationMessageFor(model => model.Number)&nbsp;&nbsp;&nbsp;
                        </div>
                    </div>
                    <div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.KnownAs, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.KnownAs)
                            @Html.ValidationMessageFor(model => model.KnownAs)
                        </div>
                    </div>
                </div>
                <div>
                    <div style="float:left;">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Brand)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Brand)
                            @Html.ValidationMessageFor(model => model.Brand)&nbsp;&nbsp;&nbsp;
                        </div>
                    </div>
                    <div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Tags)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Tags)
                            @Html.ValidationMessageFor(model => model.Tags)
                        </div>
                    </div>
                </div>
                <div>
                    <div style="">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Stock, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Stock)
                            @Html.ValidationMessageFor(model => model.Stock)&nbsp;&nbsp;&nbsp;
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div>
            <div>
                <input type="button" id="btnImages" class="link_a" value="+ Images" onclick="onclickImages()" />
            </div>

            <div class="toggle1" id="divImages">
                Images----------
            </div>
        </div>

        <div>
            <div>
                <input type="button" id="btnItemLocations" class="link_a" value="+ Item locations" onclick="onclickItemLocations()" />
            </div>

            <div class="toggle1" id="divItemLocations">
                Item locations----------
            </div>
        </div>

        <div>
            <div>
                <input type="button" id="btnPricing" class="link_a" value="+ Pricing & Taxes" onclick="onclickPricing()" />
            </div>
            <div class="toggle1" id="divPricing">
                <div>
                    <div style="float:left;">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.WholesalePrice, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.WholesalePrice)
                            @Html.ValidationMessageFor(model => model.WholesalePrice)&nbsp;&nbsp;&nbsp;
                        </div>
                    </div>
                    <div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.RetailPrice, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.RetailPrice)
                            @Html.ValidationMessageFor(model => model.RetailPrice)
                        </div>
                    </div>
                </div>
                <div>
                    <div style="float:left;">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.BuyPrice, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.BuyPrice)
                            @Html.ValidationMessageFor(model => model.BuyPrice)&nbsp;&nbsp;&nbsp;
                        </div>
                    </div>
                    <div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.InitialCostPrice, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.InitialCostPrice)
                            @Html.ValidationMessageFor(model => model.InitialCostPrice)
                        </div>
                    </div>
                </div>
                <div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Taxable)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Taxable)
                        @Html.ValidationMessageFor(model => model.Taxable)
                    </div>
                </div>
            </div>
        </div>
        
        <div>
            <div>
                <input type="button" id="btnHistory" class="link_a" value="+ History" onclick="onclickHistory()" />
            </div>

            <div class="toggle1" id="divHistory">
                History----------
            </div>
         </div>

        <div>
            <div>
                <input type="button" id="btnItemRelationship" class="link_a" value="+ Item Relationship" onclick="onclickItemRelationship()" />
            </div>
            <div class="toggle1" id="divItemRelationship">
                @*Item Relationship----------*@

                @Html.Partial("Relationship")
            </div>
        </div>

        <p>
            <input type="submit" class="btn_style" value="Save" />
        </p>
    </fieldset>
}


<div class="div_asteric">* sign fields are mendatory.</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jqueryval")
    

<script>
    function onclickDetails() {

        if (document.getElementById("btnDetails").value == "+ Details") {

            document.getElementById("divDetails").style.display = 'block';
            document.getElementById("btnDetails").value = "- Details";

        }
        else {

            document.getElementById("divDetails").style.display = 'none';
            document.getElementById("btnDetails").value = "+ Details";
        }
    }

    function onclickItemRelationship() {

        if (document.getElementById("btnItemRelationship").value == "+ Item Relationship") {

            document.getElementById("divItemRelationship").style.display = 'block';
            document.getElementById("btnItemRelationship").value = "- Item Relationship";

        }
        else {

            document.getElementById("divItemRelationship").style.display = 'none';
            document.getElementById("btnItemRelationship").value = "+ Item Relationship";
